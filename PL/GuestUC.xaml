<UserControl x:Class="PL.GuestUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FlowDirection="RightToLeft">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="tbkEnterMail" Text="התחבר   " HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
                <TextBox x:Name="tbxEnterMail"  Grid.Row="1" HorizontalAlignment="Stretch" Margin="5,0,5 ,5" VerticalAlignment="Stretch" />
            </Grid>
            <Button x:Name="LogInButton" Content="התחבר"  Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"  />
            <ComboBox x:Name="cbxfilter" Grid.Column="3" HorizontalAlignment="Right" Height="Auto" Margin="3" 
                        VerticalAlignment="Center" Width="100" Visibility="Hidden"   SelectedItem="{Binding BE.dataType}" ItemsSource="{Binding}"/>

        </Grid>

        <DataGrid Grid.Row="1" x:Name="dataGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   FlowDirection="RightToLeft">
        </DataGrid>
        <Grid x:Name="UnitsGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
        </Grid>

        <Grid Grid.Row="2"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FlowDirection="RightToLeft">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="AddButton"  Grid.Column="1" Content=" הוסף בקשה חדשה" HorizontalAlignment="Center" Margin="10,5"  VerticalAlignment="Stretch" Width="100" ></Button>
        </Grid>

    </Grid>
</UserControl>
